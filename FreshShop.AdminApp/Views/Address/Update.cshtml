@model FreshShop.ViewModels.Catalog.Address.AddressUpdateRequest
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section script{
    <script src="~/jsControllers/addressController.js"></script>

}

<!-- Page-header start -->
<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="page-header-title">
                    <h5 class="m-b-10">Cập nhật địa chỉ</h5>

                </div>
            </div>
            <div class="col-md-4">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="/"> <i class="fa fa-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/User/Index">Người dùng</a>
                    </li>
                    <li class="breadcrumb-item">
                        @Html.ActionLink("Cập nhật địa chỉ", "Update", "Address", new { id = Model.Id })
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">

            <!-- Page body start -->
            <div class="page-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                            </div>
                            <div class="card-block">
                                <form asp-action="Update" asp-controller="Address" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input asp-for="Id" type="hidden" value="@Model.Id" />
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="ProvinceId"></label>
                                        <div class="col-sm-10">
                                            <select id="sllProvince" asp-for="ProvinceId" class="custom-select" asp-items="@ViewBag.ListProvince">
                                                <option value="" selected="selected" disabled="disabled">--Chọn Tỉnh/Thành phố--</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="Districtd"></label>
                                        <div class="col-sm-10">
                                            <select id="sllDistrict" asp-for="Districtd" class="custom-select" asp-items="@ViewBag.ListDistrict">
                                                <option value="" selected="selected" disabled="disabled">--Chọn Quận/Huyện--</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="Detail"></label>
                                        <div class="col-sm-10">
                                            <textarea asp-for="Detail" class="form-control" type="text"></textarea>
                                            <span asp-validation-for="Detail" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <input type="submit" value="Cập nhật" class="btn btn-primary" />
                                        <a class="btn btn-primary" asp-action="Index">Quay về</a>
                                    </div>
                                </form>


                            </div>
                        </div>


                    </div>

                </div>

            </div>
            <!-- Page body end -->
        </div>
    </div>
    <!-- Main-body end -->
</div>

