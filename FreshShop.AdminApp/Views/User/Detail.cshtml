@model FreshShop.ViewModels.System.Users.UserViewModel

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var addresses = (List<FreshShop.ViewModels.Catalog.Address.AddressViewModel>)ViewBag.ListAddress;
}
@section script{
    <script src="~/jsControllers/addressController.js"></script>

}


<!-- Page-header start -->
<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="page-header-title">
                    <h5 class="m-b-10">Chi tiết thông tin người dùng</h5>
                    <p class="m-b-0">Lorem Ipsum is simply dummy text of the printing</p>
                </div>
            </div>
            <div class="col-md-4">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="/"> <i class="fa fa-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/User/Index">Người dùng</a>
                    </li>
                    <li class="breadcrumb-item">
                        @Html.ActionLink("Chi tiết", "Detail", "User", new { id = Model.Id })

                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<div class="pcoded-inner-content">
