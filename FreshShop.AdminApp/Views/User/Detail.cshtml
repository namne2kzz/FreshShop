                                                <!-- Main-body start -->
                                                <!--<div class="main-body">
                            <div class="page-wrapper">-->
                                                <!-- Page-body start -->
                                                <!--<div class="page-body">-->
                                                <!-- Hover table card start -->
                                                <!--<div class="card">-->
                                                @if (TempData["AlertMessage"] != null)
                                                {
                                                    <div id="AlertBox" class="alert @TempData["AlertType"] hide" role="alert">
                                                        @TempData["AlertMessage"]
                                                    </div>

                                                }
                                                @*<div class="card-header">*@
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <a class="btn btn-primary" href="/Address/Create?userId=@Model.Id">Thêm mới</a>
                                                    </div>


                                                </div>

                                                @*</div>*@


                                                <div class="table-responsive">
                                                    <table class="table table-hover">
                                                        <thead>
                                                            <tr>
                                                                <th>Mã địa chỉ</th>
                                                                <th>Mã tỉnh/thành phố</th>
                                                                <th>Tên tỉnh/thành phố</th>
                                                                <th>Mã quận/huyện</th>
                                                                <th>Tên quận/huyện</th>
                                                                <th>Chi tiết</th>
                                                                <th>Trạng thái</th>
                                                                <th></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @{
                                                                foreach (var item in addresses)
                                                                {
                                                                    <tr>
                                                                        <th>@item.Id</th>
                                                                        <td>@item.ProvinceId</td>
                                                                        <td>@item.ProvinceName</td>
                                                                        <td>@item.DistrictId</td>
                                                                        <td>@item.DistrictName</td>
                                                                        <td>@item.Detail</td>
                                                                        <td>
                                                                            @if (item.IsDefault)
                                                                            {
                                                                                <a id="address-link-default" class="address-link-status" data-id="@item.Id" href="#">Mặc định</a>
                                                                            }
                                                                            else
                                                                            {
                                                                                <a href="#" data-id="@item.Id" class="address-link-status">Phụ</a>
                                                                            }

                                                                        </td>
                                                                        <td>
                                                                            @Html.ActionLink("Cập nhật", "Update", "Address", new { id = item.Id }) |
                                                                            <a href="#" class="address-link-delete" data-id="@item.Id">Xóa</a>

                                                                        </td>
                                                                    </tr>
                                                                }
                                                            }


                                                        </tbody>
                                                    </table>
                                                </div>


                                                <!--</div>-->
