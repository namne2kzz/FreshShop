@model FreshShop.ViewModels.System.Roles.RoleAssignRequest

@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page-header start -->
<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="page-header-title">
                    <h5 class="m-b-10">Phân quyền người dùng</h5>
                    <p class="m-b-0">Lorem Ipsum is simply dummy text of the printing</p>
                </div>
            </div>
            <div class="col-md-4">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="/Home/Index"> <i class="fa fa-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/User/Index">Người dùng</a>
                    </li>
                    <li class="breadcrumb-item">
                        @Html.ActionLink("Gán quyền", "RoleAssign", "User", new { id = Model.Id })
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">
                <!-- Hover table card start -->
                <div class="card">
                    @if (TempData["AlertMessage"] != null)
                    {
                        <div id="AlertBox" class="alert @TempData["AlertType"] hide" role="alert">
                            @TempData["AlertMessage"]
                        </div>

                    }
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">

                            </div>
                            <div class="col-md-6">

                            </div>

                        </div>

                    </div>

                    <div class="card-block table-border-style">
                       
                        <form asp-action="RoleAssign">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            @for (var i = 0; i < Model.Roles.Count; i++)
                            {
                                <div class="form-group">
                                   
                                        <label class="form-check-label">
                                            @Model.Roles[i].Name
                                            <input asp-for="Roles[i].Selected" type="checkbox" value="" class="form-control">
                                            <input type="hidden" asp-for="Roles[i].Id" />
                                            <input type="hidden" asp-for="Roles[i].Name" />
                                           
                                        </label>
                                   
                                </div>

                            }

                            <div class="form-group">
                                <input type="submit" value="Lưu lại" class="btn btn-primary" />
                                <a class="btn btn-primary" asp-action="Index">Quay về</a>
                            </div>
                        </form>
                       

                    </div>
                </div>
                <!-- Hover table card end -->
            </div>
            <!-- Page-body end -->
        </div>
    </div>
    <!-- Main-body end -->

</div>








