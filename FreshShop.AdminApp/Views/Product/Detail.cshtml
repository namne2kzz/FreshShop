@using FreshShop.ViewModels.Catalog.Product
@using FreshShop.ViewModels.Catalog.Promotion
@using FreshShop.ViewModels.Catalog.ProductImage
@model ProductViewModel

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listImage = (List<ProductImageViewModel>)ViewBag.ListImage;
    var promotion = (PromotionUpdateRequest)ViewBag.Promotion;
}

@section script{

    <script src="~/jsControllers/product-detailController.js"></script>
}

<!-- Page-header start -->
<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="page-header-title">
                    <h5 class="m-b-10">Chi tiết thông tin sản phẩm</h5>
                    <p class="m-b-0">Lorem Ipsum is simply dummy text of the printing</p>
                </div>
            </div>
            <div class="col-md-4">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="/"> <i class="fa fa-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/Product/Index">Sản phẩm</a>
                    </li>
                    <li class="breadcrumb-item">
                        @Html.ActionLink("Chi tiết", "Detail", "Product", new { id = Model.ID })

                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page body start -->
            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">
                        <!-- Material tab card start -->
                        <div class="card">

                            <div class="card-block">
                                <!-- Row start -->
                                <div class="row m-b-30">
                                    <div class="col-lg-12 col-xl-12">

                                        <!-- Nav tabs -->
                                        <ul class="nav nav-tabs md-tabs" role="tablist">

                                            <li class="nav-item">
                                                <a class="nav-link active" data-toggle="tab" href="#profile3" role="tab">Thông tin chi tiêt</a>
                                                <div class="slide"></div>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" data-toggle="tab" href="#image3" role="tab">Danh sách hình ảnh</a>
                                                <div class="slide"></div>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" data-toggle="tab" href="#settings3" role="tab">Cập nhật giá sản phẩm</a>
                                                <div class="slide"></div>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" data-toggle="tab" href="#promotion3" role="tab">Giảm giá</a>
                                                <div class="slide"></div>
                                            </li>
                                        </ul>
                                        <!-- Tab panes -->
                                        <div class="tab-content card-block">
                                            <div class="tab-pane active" id="profile3" role="tabpanel">
                                                <table style="width:100%" class="table table-hover table-responsive">

                                                    <tbody>
                                                        <tr>
                                                            <th width="20%">
                                                                @Html.DisplayNameFor(model => model.ID)
                                                            </th>
                                                            <td width="30%">
                                                                @Html.DisplayFor(model => model.ID)
                                                            </td>

                                                        </tr>
                                                        <tr>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.CategoryName)
                                                            </th>
                                                            <td>
                                                                @Html.DisplayFor(model => model.CategoryName)
                                                            </td>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.Name)
                                                            </th>
                                                            <td>
                                                                @Html.DisplayFor(model => model.Name)
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.Unit)
                                                            </th>
                                                            <td>
                                                                @Html.DisplayFor(model => model.Unit)
                                                            </td>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.LanguageId)
                                                            </th>
                                                            <td>
                                                                @Html.DisplayFor(model => model.LanguageId)
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.OriginalPrice)
                                                            </th>
                                                            <td>
                                                                @Html.DisplayFor(model => model.OriginalPrice)
                                                            </td>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.Price)
                                                            </th>
                                                            <td>
                                                                @Html.DisplayFor(model => model.Price)
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.Stock)
                                                            </th>
                                                            <td>
                                                                @Html.DisplayFor(model => model.Stock)
                                                            </td>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.Sold)
                                                            </th>
                                                            <td>
                                                                @Html.DisplayFor(model => model.Sold)
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.ViewCount)
                                                            </th>
                                                            <td>
                                                                @Html.DisplayFor(model => model.ViewCount)
                                                            </td>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.CreatedDate)
                                                            </th>
                                                            <td>
                                                                @Html.DisplayFor(model => model.CreatedDate)
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.SeoAlias)
                                                            </th>
                                                            <td>
                                                                @Html.DisplayFor(model => model.SeoAlias)
                                                            </td>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.SeoTitle)
                                                            </th>
                                                            <td>
                                                                @Html.DisplayFor(model => model.SeoTitle)
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.Description)
                                                            </th>
                                                            <td>
                                                                @Html.DisplayFor(model => model.Description)
                                                            </td>

                                                        </tr>
                                                    </tbody>
                                                </table>

                                            </div>
                                            <div class="tab-pane" id="image3" role="tabpanel">
                                                <form class="form-group" asp-action="AddImage" asp-controller="Product" method="post" enctype="multipart/form-data">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <input type="hidden" name="productId" value="@Model.ID" />
                                                        </div>

                                                        <label>Chọn hình ảnh</label>
                                                        <div class="col-md-4">
                                                            <input class="form-control" name="thumbnailImage" type="file" />
                                                        </div>
                                                        <div style="display:inline-block">
                                                            <button type="submit" class="btn-sm btn-primary">Thêm mới</button>

                                                        </div>
                                                    </div>
                                                </form>

                                                <div class="table-responsive">
                                                    <table class="table table-hover">
                                                        <thead>
                                                            <tr>
                                                                <th>STT</th>
                                                                <th>Image</th>
                                                                <th>Image File</th>
                                                                <th>Created Date</th>
                                                                <th>Status</th>
                                                                <th></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>

                                                            @{
                                                                foreach (var item in ViewBag.ListImage)
                                                                {
                                                                    <tr>
                                                                        <td></td>
                                                                        <td>
                                                                            <img class="img-100 align-top m-r-15" src="http://localhost:5001/user-content/@item.ImagePath" />
                                                                        </td>
                                                                        <td>@item.ImagePath</td>
                                                                        <td>@item.CreatedDate</td>
                                                                        <td>@item.IsDefault</td>
                                                                        <td>
                                                                            <a href="#" class="productImage-link-delete" data-product="@item.ProductId" data-image="@item.ProductImageId">Xóa</a>
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            }


                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                            <div class="tab-pane" id="settings3" role="tabpanel">
                                                <form asp-action="UpdatePrice" method="post">
                                                    <div class="form-group row">
                                                        <label class="col-sm-2 col-form-label">Price</label>
                                                        <div class="col-sm-8">
                                                            <input name="id" type="hidden" value="@Model.ID" />
                                                            <input name="newPrice" type="text" class="form-control" value="@Model.Price" required />

                                                        </div>
                                                        <div class="col-sm-2">
                                                            <input type="submit" value="Cập nhật" class="btn btn-primary" />
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                            <div class="tab-pane" id="promotion3" role="tabpanel">
                                                @if (ViewBag.Promotion != null)
                                                {
                                                    <form asp-action="Update" asp-controller="Promotion" method="post">
                                                        <input type="hidden" value="@promotion.Id" name="Id" />
                                                        <input type="hidden" value="@promotion.ProductId" name="ProductId" />
                                                        <div class="form-group row">
                                                            <label class="col-sm-2 col-form-label">From Date</label>
                                                            <div class="col-sm-8">
                                                                <input asp-for="@promotion.FromDate" name="FromDate" type="date" class="form-control" required />
                                                                <span asp-validation-for="@promotion.FromDate" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-sm-2 col-form-label">Expired Date</label>
                                                            <div class="col-sm-8">
                                                                <input asp-for="@promotion.ExpiredDate" name="ExpiredDate" type="date" class="form-control" required />
                                                                <span asp-validation-for="@promotion.ExpiredDate" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-sm-2 col-form-label">From Date</label>
                                                            <div class="col-sm-8">
                                                                <input asp-for="@promotion.Discount" name="Discount" type="text" class="form-control" required />
                                                                <span asp-validation-for="@promotion.Discount" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-sm-2 col-form-label">Status</label>
                                                            <div class="col-sm-8">
                                                                <input asp-for="@promotion.Status" name="Status" type="checkbox" class="form-control" />
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <div class="col-sm-2">
                                                                <input type="submit" value="Cập nhật" class="btn btn-primary" />

                                                            </div>
                                                            <div class="col-sm-8"></div>
                                                            <div class="col-sm-2">
                                                                <strong> <a href="#" id="btnPromotionDelete" data-id="@promotion.Id">Xóa giảm giá</a></strong>
                                                            </div>
                                                        </div>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <div>Sản phẩm chưa được giảm giá. Đi đến trang <strong><a href="/Product/Index">Sản phẩm</a></strong> để tạo giảm giá cho sản phẩm! </div>
                                                }

                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <!-- Row end -->
                                <a class="btn btn-primary" asp-action="Index">Quay về</a>
                            </div>
                        </div>
                        <!-- Material tab card end -->
                    </div>
                </div>

            </div>
            <!-- Page body end -->
        </div>
    </div>
</div>

