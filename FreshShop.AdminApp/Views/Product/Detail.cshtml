@using FreshShop.ViewModels.Catalog.Product
@using FreshShop.ViewModels.Catalog.ProductImage
@model ProductViewModel

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listImage = (List<ProductImageViewModel>)ViewBag.ListImage;
}

@section script{ 

    <script src="~/jsControllers/product-detailController.js"></script>
}

<!-- Page-header start -->
<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="page-header-title">
                    <h5 class="m-b-10">Chi tiết thông tin sản phẩm</h5>
                    <p class="m-b-0">Lorem Ipsum is simply dummy text of the printing</p>
                </div>
            </div>
            <div class="col-md-4">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="/"> <i class="fa fa-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/Product/Index">Sản phẩm</a>
                    </li>
                    <li class="breadcrumb-item">
                        @Html.ActionLink("Chi tiết", "Detail", "Product", new { id = Model.ID })

                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page body start -->
            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">
                        <!-- Material tab card start -->
                        <div class="card">

                            <div class="card-block">
                                <!-- Row start -->
                                <div class="row m-b-30">
                                    <div class="col-lg-12 col-xl-12">

                                        <!-- Nav tabs -->
                                        <ul class="nav nav-tabs md-tabs" role="tablist">

                                            <li class="nav-item">
                                                <a class="nav-link active" data-toggle="tab" href="#profile3" role="tab">Thông tin chi tiêt</a>
                                                <div class="slide"></div>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" data-toggle="tab" href="#image3" role="tab">Danh sách hình ảnh</a>
                                                <div class="slide"></div>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" data-toggle="tab" href="#settings3" role="tab">Cập nhật giá sản phẩm</a>
                                                <div class="slide"></div>
                                            </li>
                                        </ul>
                                        <!-- Tab panes -->
                                        <div class="tab-content card-block">
                                            <div class="tab-pane active" id="profile3" role="tabpanel">
                                                <dl class="row">
                                                    <dt class="col-sm-3">
                                                        @Html.DisplayNameFor(model => model.ID)
                                                    </dt>
                                                    <dd class="col-sm-8">
                                                        @Html.DisplayFor(model => model.ID)
                                                    </dd>
                                                    <dt class="col-sm-3">
                                                        @Html.DisplayNameFor(model => model.Name)
                                                    </dt>
                                                    <dd class="col-sm-8">
                                                        @Html.DisplayFor(model => model.Name)
                                                    </dd>
                                                    <dt class="col-sm-3">
                                                        @Html.DisplayNameFor(model => model.CategoryName)
                                                    </dt>
                                                    <dd class="col-sm-8">
                                                        @Html.DisplayFor(model => model.CategoryName)
                                                    </dd>
                                                    <dt class="col-sm-3">
                                                        @Html.DisplayNameFor(model => model.Description)
                                                    </dt>
                                                    <dd class="col-sm-8">
                                                        @Html.DisplayFor(model => model.Description)
                                                    </dd>
                                                    <dt class="col-sm-3">
                                                        @Html.DisplayNameFor(model => model.Stock)
                                                    </dt>
                                                    <dd class="col-sm-8">
                                                        @Html.DisplayFor(model => model.Stock)
                                                    </dd>
                                                    <dt class="col-sm-3">
                                                        @Html.DisplayNameFor(model => model.Sold)
                                                    </dt>
                                                    <dd class="col-sm-8">
                                                        @Html.DisplayFor(model => model.Sold)
                                                    </dd>
                                                    <dt class="col-sm-3">
                                                        @Html.DisplayNameFor(model => model.Unit)
                                                    </dt>
                                                    <dd class="col-sm-8">
                                                        @Html.DisplayFor(model => model.Unit)
                                                    </dd>
                                                    <dt class="col-sm-3">
                                                        @Html.DisplayNameFor(model => model.OriginalPrice)
                                                    </dt>
                                                    <dd class="col-sm-8">
                                                        @Html.DisplayFor(model => model.OriginalPrice)
                                                    </dd>
                                                    <dt class="col-sm-3">
                                                        @Html.DisplayNameFor(model => model.Price)
                                                    </dt>
                                                    <dd class="col-sm-8">
                                                        @Html.DisplayFor(model => model.Price)
                                                    </dd>
                                                    <dt class="col-sm-3">
                                                        @Html.DisplayNameFor(model => model.ViewCount)
                                                    </dt>
                                                    <dd class="col-sm-8">
                                                        @Html.DisplayFor(model => model.ViewCount)
                                                    </dd>
                                                    <dt class="col-sm-3">
                                                        @Html.DisplayNameFor(model => model.CreatedDate)
                                                    </dt>
                                                    <dd class="col-sm-8">
                                                        @Html.DisplayFor(model => model.CreatedDate)
                                                    </dd>
                                                    <dt class="col-sm-3">
                                                        @Html.DisplayNameFor(model => model.SeoAlias)
                                                    </dt>
                                                    <dd class="col-sm-8">
                                                        @Html.DisplayFor(model => model.SeoAlias)
                                                    </dd>
                                                    <dt class="col-sm-3">
                                                        @Html.DisplayNameFor(model => model.SeoTitle)
                                                    </dt>
                                                    <dd class="col-sm-8">
                                                        @Html.DisplayFor(model => model.SeoTitle)
                                                    </dd>
                                                    <dt class="col-sm-3">
                                                        @Html.DisplayNameFor(model => model.LanguageId)
                                                    </dt>
                                                    <dd class="col-sm-8">
                                                        @Html.DisplayFor(model => model.LanguageId)
                                                    </dd>
                                                </dl>

                                            </div>
                                            <div class="tab-pane" id="image3" role="tabpanel">                                                                                                                                                
                                                        <form class="form-group" asp-action="AddImage" asp-controller="Product" method="post" enctype="multipart/form-data">
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <input type="hidden" name="productId" value="@Model.ID" />
                                                                </div>
                                                              
                                                                <label>Chọn hình ảnh</label>
                                                                <div class="col-md-4">
                                                                    <input class="form-control" name="thumbnailImage" type="file" />
                                                                </div>
                                                                <div style="display:inline-block">
                                                                    <button type="submit" class="btn-sm btn-primary">Thêm mới</button>

                                                                </div>
                                                            </div>
                                                        </form>                                                                                                

                                                <div class="table-responsive">
                                                    <table class="table table-hover">
                                                        <thead>
                                                            <tr>
                                                                <th>STT</th>
                                                                <th>Image</th>
                                                                <th>Image File</th>
                                                                <th>Created Date</th>
                                                                <th>Status</th>
                                                                <th></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>

                                                            @{
                                                                foreach (var item in ViewBag.ListImage)
                                                                {
                                                                    <tr>
                                                                        <td></td>
                                                                        <td>
                                                                            <img class="img-100 align-top m-r-15" src="http://localhost:5001/user-content/@item.ImagePath" />
                                                                        </td>
                                                                        <td>@item.ImagePath</td>
                                                                        <td>@item.CreatedDate</td>
                                                                        <td>@item.IsDefault</td>
                                                                        <td>
                                                                            <a href="#" class="productImage-link-delete" data-product="@item.ProductId" data-image="@item.ProductImageId">Xóa</a>
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            }


                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                            <div class="tab-pane" id="settings3" role="tabpanel">
                                                <form asp-action="UpdatePrice" method="post">
                                                    <div class="form-group row">
                                                        <label class="col-sm-2 col-form-label">Price</label>
                                                        <div class="col-sm-8">
                                                            <input name="id" type="hidden" value="@Model.ID" />
                                                            <input name="newPrice" type="text" class="form-control" value="@Model.Price" required />

                                                        </div>
                                                        <div class="col-sm-2">
                                                            <input type="submit" value="Update" class="btn btn-primary" />
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <!-- Row end -->
                                <a class="btn btn-primary" asp-action="Index">Quay về</a>
                            </div>
                        </div>
                        <!-- Material tab card end -->
                    </div>
                </div>

            </div>
            <!-- Page body end -->
        </div>
    </div>
</div>

