@model FreshShop.ViewModels.Catalog.Product.ProductCreateRequest
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section script{

    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('txtDescription');
    </script>
}




<!-- Page-header start -->
<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="page-header-title">
                    <h5 class="m-b-10">Thêm mới sản phẩm</h5>

                </div>
            </div>
            <div class="col-md-4">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="/"> <i class="fa fa-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/Product/Index">User</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/Product/Create">Create</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">

            <!-- Page body start -->
            <div class="page-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">


                            </div>
                            <div class="card-block">
                                <form asp-action="Create" asp-controller="Product" method="post" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="CategoryId"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="CategoryId" type="text" class="form-control">
                                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="Name"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="Name" type="text" class="form-control">
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="Unit"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="Unit" type="text" class="form-control">
                                            <span asp-validation-for="Unit" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="OriginalPrice"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="OriginalPrice" type="number" class="form-control">
                                            <span asp-validation-for="OriginalPrice" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="Price"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="Price" type="number" class="form-control">
                                            <span asp-validation-for="Price" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="Stock"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="Stock" type="number" class="form-control">
                                            <span asp-validation-for="Stock" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="Description"></label>
                                        <div class="col-sm-10">
                                            <textarea id="txtDescription" asp-for="Description" type="text" class="form-control"></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="SeoTitle"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="SeoTitle" type="text" class="form-control">
                                            <span asp-validation-for="SeoTitle" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="SeoAlias"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="SeoAlias" type="text" class="form-control">
                                            <span asp-validation-for="SeoAlias" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="ThumbnailImage"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="ThumbnailImage" class="form-control">
                                            <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <input type="submit" value="Thêm mới" class="btn btn-primary" />
                                        <a class="btn btn-primary" asp-action="Index">Quay về</a>
                                    </div>
                                </form>


                            </div>
                        </div>


                    </div>

                </div>

            </div>
            <!-- Page body end -->
        </div>
    </div>
    <!-- Main-body end -->
</div>

