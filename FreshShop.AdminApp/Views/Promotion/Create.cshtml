@model FreshShop.ViewModels.Catalog.Promotion.PromotionCreateRequest
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page-header start -->
<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="page-header-title">
                    <h5 class="m-b-10">Thêm mới giảm giá cho sản phẩm</h5>

                </div>
            </div>
            <div class="col-md-4">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="/"> <i class="fa fa-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/Product/Index">Sản phẩm</a>
                    </li>
                    <li class="breadcrumb-item">
                       @Html.ActionLink("Giảm giá", "Create", "Promotion", new {id=ViewBag.ProductId})
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">

            <!-- Page body start -->
            <div class="page-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                            </div>
                            <div class="card-block">
                                <form asp-action="Create" asp-controller="Promotion" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="ProductId"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="ProductId" type="text" class="form-control" value="@TempData["ProductId"]">
                                            <span asp-validation-for="ProductId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="FromDate"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="FromDate" type="date" class="form-control" />
                                            <span asp-validation-for="FromDate" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="ExpiredDate"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="ExpiredDate" class="form-control" type="date">
                                            <span asp-validation-for="ExpiredDate" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="Discount"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="Discount" class="form-control" type="number">
                                            <span asp-validation-for="Discount" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <input type="submit" value="Thêm mới" class="btn btn-primary" />
                                        <a class="btn btn-primary" asp-action="Index">Quay về</a>
                                    </div>
                                </form>


                            </div>
                        </div>


                    </div>

                </div>

            </div>
            <!-- Page body end -->
        </div>
    </div>
    <!-- Main-body end -->
</div>

