@model FreshShop.ViewModels.Catalog.Category.CategoryCreateRequest
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page-header start -->
<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="page-header-title">
                    <h5 class="m-b-10">Thêm mới danh mục</h5>

                </div>
            </div>
            <div class="col-md-4">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="/"> <i class="fa fa-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/Category/Index">Danh mục</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/Category/Create">Thêm mới</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">

            <!-- Page body start -->
            <div class="page-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                            </div>
                            <div class="card-block">
                                <form asp-action="Create" asp-controller="Category" method="post" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="CategoryName"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="CategoryName" type="text" class="form-control">
                                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="ParentId"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="ParentId" type="text" class="form-control">
                                            <span asp-validation-for="ParentId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="SeoTitle"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="SeoTitle" type="text" class="form-control">
                                            <span asp-validation-for="SeoTitle" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="SeoAlias"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="SeoAlias" type="text" class="form-control">
                                            <span asp-validation-for="SeoAlias" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="IsShowOnHome"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="IsShowOnHome" type="checkbox" class="form-control">
                                            <span asp-validation-for="IsShowOnHome" class="text-danger"></span>
                                        </div>
                                    </div>                                                                                                 

                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" asp-for="ThumbnailImage"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="ThumbnailImage" class="form-control" type="file">
                                            <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <input type="submit" value="Thêm mới" class="btn btn-primary" />
                                        <a class="btn btn-primary" asp-action="Index">Quay về</a>
                                    </div>
                                </form>


                            </div>
                        </div>


                    </div>

                </div>

            </div>
            <!-- Page body end -->
        </div>
    </div>
    <!-- Main-body end -->
</div>

