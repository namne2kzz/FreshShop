@model FreshShop.ViewModels.Catalog.Category.CategoryViewModel
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var subCategory =(List<FreshShop.ViewModels.Catalog.Category.CategoryViewModel>) ViewBag.SubCategory;
}

<!-- Page-header start -->
<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="page-header-title">
                    <h5 class="m-b-10">Chi tiết thông tin loại loại sản phẩm</h5>
                    <p class="m-b-0">Lorem Ipsum is simply dummy text of the printing</p>
                </div>
            </div>
            <div class="col-md-4">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="/"> <i class="fa fa-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/Category/Index">Danh mục</a>
                    </li>
                    <li class="breadcrumb-item">
                        @Html.ActionLink("Chi tiết", "Detail", "Category", new { id = Model.CategoryId })

                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page body start -->
            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">
                        <!-- Material tab card start -->
                        <div class="card">

                            <div class="card-block">
                                <!-- Row start -->
                                <div class="row m-b-30">
                                    <div class="col-lg-12 col-xl-12">

                                        <!-- Nav tabs -->
                                        <ul class="nav nav-tabs md-tabs" role="tablist">

                                            <li class="nav-item">
                                                <a class="nav-link active" data-toggle="tab" href="#profile3" role="tab">Thông tin chi tiêt</a>
                                                <div class="slide"></div>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" data-toggle="tab" href="#image3" role="tab">Danh sách danh mục con</a>
                                                <div class="slide"></div>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" data-toggle="tab" href="#settings3" role="tab">Gán trạng thái</a>
                                                <div class="slide"></div>
                                            </li>
                                        </ul>
                                        <!-- Tab panes -->
                                        <div class="tab-content card-block">
                                            <div class="tab-pane active" id="profile3" role="tabpanel">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <table style="width:100%" class="table table-hover table-responsive">

                                                            <tbody>
                                                                <tr>
                                                                    <th width="20%">
                                                                        @Html.DisplayNameFor(model => model.CategoryId)
                                                                    </th>
                                                                    <td width="30%">
                                                                        @Html.DisplayFor(model => model.CategoryId)
                                                                    </td>

                                                                </tr>
                                                                <tr>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => model.CategoryName)
                                                                    </th>
                                                                    <td>
                                                                        @Html.DisplayFor(model => model.CategoryName)
                                                                    </td>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => model.IsShownHome)
                                                                    </th>
                                                                    <td>
                                                                        @Html.DisplayFor(model => model.IsShownHome)
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => model.ParentId)
                                                                    </th>
                                                                    <td>
                                                                        @Html.DisplayFor(model => model.ParentId)
                                                                    </td>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => model.LanguageId)
                                                                    </th>
                                                                    <td>
                                                                        @Html.DisplayFor(model => model.LanguageId)
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => model.SeoAlias)
                                                                    </th>
                                                                    <td>
                                                                        @Html.DisplayFor(model => model.SeoAlias)
                                                                    </td>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => model.SeoTitle)
                                                                    </th>
                                                                    <td>
                                                                        @Html.DisplayFor(model => model.SeoTitle)
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <img style="height:80%;width:80%" src="http://localhost:5001/user-content/@Model.ImagePath" alt="@Model.CategoryName" />
                                                    </div>
                                                </div>
                                               

                                            </div>
                                            <div class="tab-pane" id="image3" role="tabpanel">
                                                <div class="table-responsive">
                                                    <table class="table table-hover">
                                                        <thead>
                                                            <tr>
                                                                <th>Mã danh mục</th>
                                                                <th>Tên danh mục</th>                                                               
                                                                <th>Trạng thái hiển thị</th>
                                                                <th>Hình ảnh</th>                                                                
                                                            </tr>
                                                        </thead>
                                                        <tbody>

                                                            @{
                                                                foreach (var item in subCategory)
                                                                {
                                                                    <tr>
                                                                        <td>@item.CategoryId</td>
                                                                        <td>@item.CategoryName</td>                                                                        
                                                                        <td>@item.IsShownHome</td>
                                                                        <td>
                                                                            <img src="http://localhost:5001/user-content/@item.ImagePath" class="img-radius img-40 align-top m-r-15" />
                                                                        </td>                                                                      
                                                                    </tr>
                                                                }
                                                            }


                                                        </tbody>
                                                    </table>
                                                </div>

                                            </div>
                                            <div class="tab-pane" id="settings3" role="tabpanel">
                                               
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <!-- Row end -->
                                <a class="btn btn-primary" asp-action="Index">Quay về</a>
                            </div>
                        </div>
                        <!-- Material tab card end -->
                    </div>
                </div>

            </div>
            <!-- Page body end -->
        </div>
    </div>
</div>

